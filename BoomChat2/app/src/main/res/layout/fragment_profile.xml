<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- <android.support.design.widget.CollapsingToolbarLayout -->
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/ctolbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        app:expandedTitleMargin="5dp"
        app:expandedTitleMarginStart="48dp"
        app:layout_scrollFlags="enterAlways|enterAlwaysCollapsed|scroll">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/cover_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:background="@drawable/gradient_cover" />
        </RelativeLayout>
    </com.google.android.material.appbar.CollapsingToolbarLayout>
    <FrameLayout
        android:id="@+id/flmiddle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/background_round">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/uname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="Jack Sparrow"
                    android:textColor="#ff3f4751"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/uemail"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="221 B Baker Street, London"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/uphon"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="+94 77 980 5664"
                    android:textSize="15sp" />

            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:id="@+id/uprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_add_image"
            android:layout_gravity="center|top" />

    </FrameLayout>
<ImageView
    android:id="@+id/logout_but1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="5dp"
    android:layout_marginLeft="1dp"
    android:src="@drawable/ic_login_out_24"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_propaty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_baseline_add_circle_24" />
</FrameLayout>