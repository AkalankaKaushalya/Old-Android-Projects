<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".OurMenu">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/bread_but"
                        android:layout_width="100dp"
                        android:layout_height="170dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/circular_menu"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/bimg"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/brade"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="@font/baskvill"
                            android:text="Bread"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fastfood_but"
                        android:layout_width="100dp"
                        android:layout_height="170dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/circular_menu"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/fimg"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/fast_food"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="@font/baskvill"
                            android:text="Fast Food"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/drank_but"
                        android:layout_width="100dp"
                        android:layout_height="170dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/circular_menu"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/dimg"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/drink"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="@font/baskvill"
                            android:text="Drinks"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/raise_but"
                        android:layout_width="100dp"
                        android:layout_height="170dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/circular_menu"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/rimg"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/raise"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="@font/baskvill"
                            android:text="Rice"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- bread-->
            <LinearLayout
                android:id="@+id/breadpart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recybread"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

   </LinearLayout>
    </ScrollView>
