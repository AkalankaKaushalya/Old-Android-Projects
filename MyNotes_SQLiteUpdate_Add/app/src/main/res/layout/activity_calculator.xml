<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".CalculatorActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="250.0dip"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:padding="3.0dip">

        <EditText
            android:id="@+id/numberTV"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:hint="Calculator"
            android:inputType="numberDecimal"
            android:textSize="30.0sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="3.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="#dfffdd00"
                android:onClick="nuberEvent"
                android:padding="20.0dip"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="28.0sp"
                android:textStyle="bold"
                app:backgroundTint="#dfffdd00" />

            <Button
                android:id="@+id/but2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="#dfffdd00"
                android:onClick="nuberEvent"
                android:padding="20.0dip"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="28.0sp"
                android:textStyle="bold"
                app:backgroundTint="#dfffdd00" />

            <Button
                android:id="@+id/but3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="#dfffdd00"
                android:onClick="nuberEvent"
                android:padding="20.0dip"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="28.0sp"
                android:textStyle="bold"
                app:backgroundTint="#dfffdd00" />

            <Button
                android:id="@+id/Cbut1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="#bc0af15f"
                android:onClick="operatEvant"
                android:padding="20.0dip"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="28.0sp"
                android:textStyle="bold"
                app:backgroundTint="#bc0af15f" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="#dfffdd00"
                android:onClick="nuberEvent"
                android:padding="20.0dip"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="28.0sp"
                android:textStyle="bold"
                app:backgroundTint="#dfffdd00" />

            <Button
                android:id="@+id/but5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="#dfffdd00"
                android:onClick="nuberEvent"
                android:padding="20.0dip"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="28.0sp"
                android:textStyle="bold"
                app:backgroundTint="#dfffdd00" />

            <Button
                android:id="@+id/but6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="#dfffdd00"
                android:onClick="nuberEvent"
                android:padding="20.0dip"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="28.0sp"
                android:textStyle="bold"
                app:backgroundTint="#dfffdd00" />

            <Button
                android:id="@+id/Cbut2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="#bc0af15f"
                android:onClick="operatEvant"
                android:padding="20.0dip"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="28.0sp"
                android:textStyle="bold"
                app:backgroundTint="#bc0af15f" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="#dfffdd00"
                android:onClick="nuberEvent"
                android:padding="20.0dip"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="28.0sp"
                android:textStyle="bold"
                app:backgroundTint="#dfffdd00" />

            <Button
                android:id="@+id/but8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="#dfffdd00"
                android:onClick="nuberEvent"
                android:padding="20.0dip"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="28.0sp"
                android:textStyle="bold"
                app:backgroundTint="#dfffdd00" />

            <Button
                android:id="@+id/but9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="#dfffdd00"
                android:onClick="nuberEvent"
                android:padding="20.0dip"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="28.0sp"
                android:textStyle="bold"
                app:backgroundTint="#dfffdd00" />

            <Button
                android:id="@+id/Cbut3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="#bc0af15f"
                android:onClick="operatEvant"
                android:padding="20.0dip"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="28.0sp"
                android:textStyle="bold"
                app:backgroundTint="#bc0af15f" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/but0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="#dfffdd00"
                android:onClick="nuberEvent"
                android:padding="20.0dip"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="28.0sp"
                android:textStyle="bold"
                app:backgroundTint="#dfffdd00" />

            <Button
                android:id="@+id/clear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="#dfffdd00"
                android:padding="20.0dip"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="28.0sp"
                android:textStyle="bold"
                app:backgroundTint="#dfffdd00" />

            <Button
                android:id="@+id/dot"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="#bc0af15f"
                android:onClick="nuberEvent"
                android:padding="20.0dip"
                android:text="."
                android:textColor="@color/black"
                android:textSize="28.0sp"
                android:textStyle="bold"
                app:backgroundTint="#bc0af15f" />

            <Button
                android:id="@+id/Cbut4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:layout_weight="1.0"
                android:background="#bc0af15f"
                android:onClick="operatEvant"
                android:padding="20.0dip"
                android:text="x"
                android:textColor="@color/black"
                android:textSize="28.0sp"
                android:textStyle="bold"
                app:backgroundTint="#bc0af15f" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sum"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#bc0af15f"
                android:onClick="sumEvant"
                android:padding="10.0dip"
                android:text="="
                android:textColor="@color/black"
                android:textSize="28.0sp"
                app:backgroundTint="#bc0af15f" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>