<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Status_Saver" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/neon_green</item>
        <item name="colorPrimaryVariant">@color/light_green</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green_01</item>
        <item name="colorSecondaryVariant">@color/light_green_02</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">@color/neon_green</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/neon_green</item>
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
    </style>
    <color name="sp1">@color/neon_green</color>
    <color name="sp2">@color/light_green_02</color>
    <color name="sp3">@color/light_green_01</color>

    <!-- Customize your theme here. -->
<style name="SplashActivity" parent="Theme.MaterialComponents.DayNight">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:statusBarColor" tools:targetApi="l">@color/neon_green</item>
    <item name="android:navigationBarColor" tools:ignore="NewApi">@color/neon_green</item>
    <item name="android:background">@drawable/splash_bg</item>
    <item name="android:textColor">@color/white</item>
</style>

</resources>