<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Status_Saver" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_green_01</item>
        <item name="colorPrimaryVariant">@color/dark_green_02</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/natural_green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_green_01</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/dark_green</item>
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>

    </style>
    <color name="sp1">@color/dark_green_01</color>
    <color name="sp2">@color/dark_green</color>
    <color name="sp3">@color/natural_green</color>

    <!-- Customize your theme here. -->
    <style name="SplashActivity" parent="Theme.MaterialComponents.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_green_01</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/dark_green</item>
        <item name="android:background">@drawable/splash_bg</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>