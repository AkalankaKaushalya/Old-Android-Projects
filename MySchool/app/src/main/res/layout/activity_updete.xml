<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdeteActivity">

    <RelativeLayout
        android:id="@+id/toolbarRL"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/toolbar_bg01">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Update Notes"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noteidTv"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarRL"
        android:padding="8dp">

        <EditText
            android:id="@+id/NtitleEd"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/shape_edittexts01"
            android:hint="Title.."
            android:inputType="textPersonName|text"
            android:paddingLeft="8dp"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/NmasseageEd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/NtitleEd"
            android:background="@drawable/shape_edittexts01"
            android:gravity="top"
            android:hint=" Write Masseage...."
            android:inputType="textMultiLine|textPersonName|textLongMessage|text"
            android:lineSpacingExtra="6dp"
            android:lineSpacingMultiplier="1"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:screenReaderFocusable="true"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>